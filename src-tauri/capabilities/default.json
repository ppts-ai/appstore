{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "remote": {
    "urls": ["http://localhost:9527"]
  },
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "store:default",
    "fs:default",
    "fs:allow-app-read-recursive",
    "fs:allow-exe-read-recursive",
    "fs:scope-exe-recursive",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "bin/podman",
          "sidecar": true
        },
        {
          "args": true,
          "name": "wsl",
          "cmd": "wsl"
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "args": true,
          "name": "bin/podman",
          "sidecar": true
        },
        {
          "args": true,
          "name": "wsl",
          "cmd": "wsl"
        }
      ]
    }
  ]
}